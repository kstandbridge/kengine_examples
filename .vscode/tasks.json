    "version": "2.0.0",
    "tasks": [
        {
			"label": "linux_hello debug build",
			"group": "build",
			"command": "./build.sh",
			"args": [
				"",
			],
			"problemMatcher": "$gcc",
			"type": "shell",
			"options": {
