    "version": "2.0.0",
    "tasks": [
		{
			"label": "linux_hello debug build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"command": "linux_hello/build.sh",
			"args": [
				""
			],
			"problemMatcher": "$gcc",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"label": "windows hello debug build",
			"type": "cppbuild",
			"command": "linux_hello\\build.bat",
			"args": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "compiler: cl.exe"
		}
	]
}