IF NOT EXIST %BuildDir% mkdir %BuildDir%

pushd %BuildDir%

cl %CommonCompilerFlags% %InternalCompilerFlags% %CurDir%\handmade\platform_handmade.c /link %CommonLinkerFlags%

popd

